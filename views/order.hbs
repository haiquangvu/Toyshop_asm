    <div class="banner">
<div class="container col-md-8 mt-6 mb-4">
   <div class="row">
      <div class="col">
         <h1>{{ toy.name }}</h1>
         <img src="{{toy.image}}" width="350" height="350">
      </div>
      <div class="col">
         <table class="table table-bordered">
            <tr>
               <th colspan="2">TOY INFORMATION</th>
            </tr>
            <tr>
               <th>Toy Manufacturer</th>
               <td>{{ toy.manufacturer }}</td>
            </tr>
            <tr>
               <th>Toy Size</th>
               <td>{{ toy.size }}</td>
            </tr>
            <tr>
               <th>Toy Material</th>
               <td>{{ toy.material }}</td>
            </tr>
            <tr>
               <th>Toy Price</th>
               <td>${{ toy.price }}</td>
            </tr>
            <tr>
               <th>In stock</th>
               <td>{{ toy.stock_quantity }}</td>
            </tr>
            <tr class="text-center">
               <th colspan="2">
                  <form action="/confirm" method="post">
                     <input type="hidden" name="name" value="{{ toy.name }}">
                     <input type="hidden" name="price" value="{{ toy.price }}">
                     <input type="number" name="quantity" min="1" max="{{ toy.stock_quantity }}">
                     <input type="submit" class="btn btn-primary" value="ORDER"></input>
                  </form>
               </th>
            </tr>
         </table>
      </div>
   </div>

