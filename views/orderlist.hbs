<body>
    <header>
        <nav>
            <div class="logo">
                <h5>F&<span>F</span></h5>
            </div>
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="">About</a></li>
                <li><a href="/orderlist">Cart</a></li>
                <li><a href="/list">Admin</a></li>
            </ul>
            <div class="bar">
                <div class="bar-1"></div>
                <div class="bar-2"></div>
                <div class="bar-3"></div>
            </div>
        </nav>
    </header>
    <div class="banner">

<div class="container text-center col-md-9 mt-3 mb-3 bg-light">
   <table class="table table-bordered">
      <tr>
         <th colspan="4">
            <h1 class="text text-secondary">ORDER LIST</h1>
         </th>
      </tr>
      <tr>
         <th  class="text text-success h5">Name </th>
         <th  class="text text-success h5"> Quantity</th>
         <th  class="text text-success h5">Total</th>
         <th  class="text text-success h5">Price</th>
      </tr>
      {{#each order }}
      <tr>
         <td>{{ name  }}</td>
         <td>{{ quantity }}</td>
         <td>${{ total }}</td>
         <td>{{ price }}</td>
         <td>
            <a class="btn btn-danger" href="/delete1/{{_id}}"
            onclick="return confirm('Are you sure to delete this order ?');"
            >Delete</a>
         </td>
      </tr>
      {{/each}}
   </table>
</div>